<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="BranchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblBranchName"
        android:textSize="24dp"
        android:textAlignment="center" />

    <TextView
        android:text="Branch adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblBranchAdress"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblDate"
        android:textAlignment="center"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblStartTime"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblEndTime"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="PersonCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblPersonCount"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Annuleren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:background="@color/mint_green"
        android:layout_marginTop="30dp" />
</LinearLayout>