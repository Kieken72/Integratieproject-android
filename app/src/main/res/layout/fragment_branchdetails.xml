<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/btnFotos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Foto's"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnPlace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:layout_toRightOf="@+id/btnFotos"
            android:text="Plaats"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/btnFotos"
            android:id="@+id/viewFoto"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/viewPlaats"
            android:layout_below="@+id/btnFotos"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnBeschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beschrijving"
            android:layout_below="@+id/viewFoto"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/viewBeschrijving"
            android:layout_below="@+id/btnBeschrijving"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnUren"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Uren"
            android:layout_below="@id/viewBeschrijving"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:layout_toRightOf="@+id/btnUren"
            android:layout_below="@id/viewBeschrijving"
            android:text="Info"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/btnUren"
            android:id="@+id/viewUrenInfo"/>

        <Button
            android:id="@+id/btnReserveren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserveren"
            android:layout_below="@id/viewUrenInfo"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"/>

    </RelativeLayout>


</ScrollView>
