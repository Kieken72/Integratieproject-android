<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branchName"
        android:hint="Brach Name"
        android:layout_toRightOf="@+id/imgBranch"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDetails"
        android:src="@drawable/noun_691344_cc"
        android:background="@color/white"
        android:layout_toRightOf="@+id/imgBranch"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branchStreet"
        android:hint="Street"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/btnDetails"
        android:layout_toEndOf="@+id/imgBranch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branchMail"
        android:hint="Email"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/branchStreet"
        android:layout_toEndOf="@+id/imgBranch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAvailable"
        android:hint="Available"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/branchMail"
        android:layout_toEndOf="@+id/imgBranch" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgBranch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>